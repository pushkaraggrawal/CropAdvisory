<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cropadvisory">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/bits_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bits_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CcropAdvisory">
        <activity
            android:name=".SoilField"
            android:exported="true" />
        <activity
            android:name=".weatherActivity"
            android:exported="true" />
        <activity
            android:name=".LoginRegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddNewField"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FieldsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>